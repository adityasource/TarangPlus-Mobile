<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_screen_bg"
    android:clickable="true"
    android:focusable="true">

    <include
        android:id="@+id/app_bar_layout"
        layout="@layout/normal_toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/app_bar_layout"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:background="@drawable/refer_a_friend"
            android:layout_marginTop="@dimen/px_90"/>
        <com.otl.tarangplus.customeUI.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_4"
            android:text="@string/love_shemaroo"
            android:textSize="@dimen/pt_16"
            android:textStyle="bold"
            android:textAlignment="center"/>
        <com.otl.tarangplus.customeUI.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px_4"
            android:padding="@dimen/px_8"
            android:text="@string/refer_friend_message"
            android:textAlignment="center"/>
        <com.otl.tarangplus.customeUI.GradientTextView
            android:id="@+id/invite"
            style="@style/rounded_gradient_btn"
            android:layout_marginTop="@dimen/px_28"
            android:text="@string/invite"
            android:textAllCaps="true"
            android:layout_margin="@dimen/px_8"/>

    </LinearLayout>

</RelativeLayout>
