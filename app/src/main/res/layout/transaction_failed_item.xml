<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.otl.tarangplus.customeUI.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/transaction_failed_header"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_account_details" />

    <com.otl.tarangplus.customeUI.MyTextView
        android:id="@+id/failed_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/transaction_failed_message"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <com.otl.tarangplus.customeUI.MyTextView
        android:id="@+id/reason_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/transaction_failed_reason_message"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <com.otl.tarangplus.customeUI.MyTextView
        android:id="@+id/transaction_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/trasaction_id"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <com.otl.tarangplus.customeUI.MyTextView
        android:id="@+id/try_again_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/try_again"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <com.otl.tarangplus.customeUI.MyTextView
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/cancel"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
</LinearLayout>