<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toast_layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/px_16"
    android:layout_marginEnd="@dimen/px_16"
    android:background="@drawable/toast_bgk"
    android:elevation="@dimen/px_6"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/px_22"
        android:layout_height="@dimen/px_22"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/px_20"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_des"
        android:src="@drawable/ic_cross"
        android:tint="@color/txt_color"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.otl.tarangplus.customeUI.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:maxLines="1"
            android:text="........................................................................................................."
            android:textColor="@color/transparent" />

        <com.otl.tarangplus.customeUI.MyTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/px_20"
            android:paddingTop="@dimen/px_28"
            android:paddingEnd="@dimen/px_20"
            android:paddingBottom="@dimen/px_28"
            android:textColor="@color/black"
            android:textSize="@dimen/pt_12"
            app:fontsName="@string/font_sans_semi_bold"
            tools:text="@string/app_name" />

    </RelativeLayout>
</LinearLayout>