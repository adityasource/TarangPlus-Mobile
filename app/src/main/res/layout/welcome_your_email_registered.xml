<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cross"
        android:src="@drawable/ic_grey_cross"
        android:padding="10dp"
        android:layout_gravity="end"
        android:layout_width="40dp"
        android:layout_margin="5dp"
        android:layout_height="40dp" />

    <com.otl.tarangplus.customeUI.MyTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="Congratulations!"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:fontName="@string/font_sans_extra_bold" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
       />

    <com.otl.tarangplus.customeUI.MyTextView
        android:id="@+id/failed_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="Your Email id has been successfully registered."
        android:textSize="14sp"
        app:fontName="@string/font_sans_medium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</LinearLayout>