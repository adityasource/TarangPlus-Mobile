<!--    CHROME CAST COLOR SCHEME    -->
    <style name="Theme.CastVideosTheme" parent="AppTheme">
        <!-- Set AppCompat's color theming attrs -->
        <item name="colorPrimary">@color/seek_bar</item>
        <item name="colorPrimaryDark">@color/seek_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/txt_color</item>
        <item name="android:textColorSecondary">@color/txt_grey_66</item>
