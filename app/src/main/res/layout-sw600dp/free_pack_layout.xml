<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.otl.tarangplus.customeUI.MyTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/pt_24"
            app:fontName="@string/font_sans_semi_bold"
            tool:text="Welcome Soumya!" />

        <ImageView
            android:id="@+id/suc_img"
            android:layout_width="@dimen/px_140"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_32"
            android:adjustViewBounds="true"
            android:src="@drawable/welcome_icon_reel"
            />

        <com.otl.tarangplus.customeUI.MyTextView
            android:id="@+id/txt_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/suc_img"
            android:layout_marginLeft="@dimen/px_12"
            android:layout_marginTop="@dimen/px_14"
            android:layout_marginRight="@dimen/px_12"
            android:gravity="center"
            android:textColor="@color/txt_grey_66"
            android:textSize="@dimen/pt_20"
            app:fontName="@string/font_sans_regular"
            tool:text="@string/free_pack" />

        <com.otl.tarangplus.customeUI.GradientTextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px_32"
            android:background="@drawable/rounded_btn_corner"
            android:gravity="center"
            android:paddingStart="@dimen/px_20"
            android:paddingTop="@dimen/px_12"
            android:paddingEnd="@dimen/px_20"
            android:paddingBottom="@dimen/px_12"
            android:text="@string/proceed"
            android:textAllCaps="true"
            android:textSize="@dimen/px_18"
            app:endcolor="@color/gradient_2"
            app:fontName="@string/font_sans_bold"
            app:startcolor="@color/gradient_1" />

    </LinearLayout>
</RelativeLayout>