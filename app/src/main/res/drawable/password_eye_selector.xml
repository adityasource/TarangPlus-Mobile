<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/ic_hide_password" android:state_checked="true" android:state_pressed="true" />
    //currently pressed turning the toggle on
    <item android:drawable="@drawable/ic_hide_password" android:state_pressed="true" />
    //currently pressed turning the toggle off
    <item android:drawable="@drawable/ic_hide_password" android:state_checked="true" />
    //not pressed default checked state
    <item android:drawable="@drawable/ic_show_password" />
    //default non-pressed non-checked
</selector>