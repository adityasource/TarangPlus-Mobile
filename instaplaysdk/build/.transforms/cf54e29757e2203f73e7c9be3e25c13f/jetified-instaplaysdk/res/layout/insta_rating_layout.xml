<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/indicator_line"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_dummy"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="6dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/txt_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/indicator_line"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rating_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:layout_marginTop="1.2dp"
            android:layout_marginBottom="1.2dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:text="RATED U/A 7+ " />

        <TextView
            android:id="@+id/rating_txt_sub_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="1.2dp"
            android:layout_marginBottom="1.2dp"
            android:layout_height="wrap_content"
            android:text="Test Test"
            android:textColor="#ffffff"
            tools:text="Comedy, Romance, Action" />

    </LinearLayout>

    <View
        android:id="@+id/bottom_dummy"
        android:layout_width="match_parent"
        android:layout_below="@+id/txt_layout"
        android:layout_height="0.1dp"/>

</RelativeLayout>